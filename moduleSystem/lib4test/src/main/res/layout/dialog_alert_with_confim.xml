<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loBackgound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dailog_color_halfbg"
    android:clickable="true">

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_alertdialog"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddinglf"
            android:layout_marginRight="@dimen/paddinglf"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dimen_5"
            android:textColor="@color/contentTitle"
            android:textSize="18dp"
            tools:text="转让失败" />

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddinglf"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/paddinglf"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dimen_5"
            android:textColor="@color/contentTitle"
            android:textSize="14dp"
            tools:text="待支付订单不支持转让。" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_s"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/contentSub"
                android:textSize="15sp"
                tools:text="取消" />

            <View
                android:id="@+id/v_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/primary"
                android:textSize="15sp"
                tools:text="我知道了" />


        </LinearLayout>
    </LinearLayout>
</FrameLayout>
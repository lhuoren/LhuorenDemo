<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:orientation="vertical">


    <com.gac.nioapp.test.qrcode.zxing.ZXingView
        android:id="@+id/zxingview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_animTime="1000"
        app:qrcv_barCodeTipText="将条码放入框内，即可自动扫描"
        app:qrcv_borderColor="@color/transparent"
        app:qrcv_borderSize="0dp"
        app:qrcv_cornerColor="@color/primary"
        app:qrcv_cornerDisplayType="inside"
        app:qrcv_cornerLength="20dp"
        app:qrcv_cornerSize="0dp"
        app:qrcv_customScanLineDrawable="@drawable/scan_icon_scanline_blue"
        app:qrcv_isAutoZoom="true"
        app:qrcv_isBarcode="false"
        app:qrcv_isOnlyDecodeScanBoxArea="false"
        app:qrcv_isScanLineReverse="true"
        app:qrcv_isShowDefaultGridScanLineDrawable="false"
        app:qrcv_isShowDefaultScanLineDrawable="true"
        app:qrcv_isShowLocationPoint="true"
        app:qrcv_isShowTipBackground="true"
        app:qrcv_isShowTipTextAsSingleLine="false"
        app:qrcv_isTipTextBelowRect="true"
        app:qrcv_maskColor="@color/transparent"
        app:qrcv_scanLineColor="@color/white"
        app:qrcv_scanLineMargin="0dp"
        app:qrcv_scanLineSize="0.5dp"
        app:qrcv_tipTextColor="@color/white"
        app:qrcv_tipTextSize="14dp"
        app:qrcv_tipTextMargin="@dimen/dimen_30"
        app:qrcv_tipBackgroundColor="#80000000"
        app:qrcv_verticalBias="-1" />
    <com.gac.nioapp.test.view.topbar.TopBarView
        android:id="@+id/topBarView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_topbar"
        app:TopBarViewShowDivider="false"
        app:colorMode="Dark"
        android:background="@color/transparent"
        app:topbarBackground="@color/transparent"
        app:leftIcon="@drawable/ic_topbar_back_white"
        app:titleTextColor="@color/white"
         />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_40"
            android:gravity="center"
            android:text="二维码/条码"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fromAlbum"
                android:layout_width="@dimen/dimen_60"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_60"
                android:src="@drawable/bg_album" />

            <ImageView
                android:id="@+id/flashLight"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:src="@drawable/bg_flashlight" />
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundMain"
        android:visibility="gone">

        <com.gac.nioapp.test.view.topbar.TopBarView
            android:id="@+id/top_bar_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_topbar"
            android:background="@color/transparent"
            app:TopBarViewShowDivider="false"
            app:colorMode="Dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftIcon="@drawable/ic_topbar_back_black"
            app:topbarBackground="@color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/backgroundMain"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_bar_view">

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/paddinglf"
                android:layout_marginTop="100dp"
                android:layout_marginRight="@dimen/paddinglf"
                android:drawableTop="@drawable/im_icon_error"
                android:drawablePadding="@dimen/dimen_20"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/dimen_5"
                android:textColor="@color/contentTitle"
                android:textSize="@dimen/dimen_18" />

            <TextView
                android:id="@+id/tvReload"
                android:layout_width="140dp"
                android:layout_height="44dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/bg_button_stroke_radius_1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/scan_again"
                android:textColor="@color/primary"
                android:textSize="16dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
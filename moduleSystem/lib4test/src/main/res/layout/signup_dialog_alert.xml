<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loBackgound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dailog_color_halfbg"
    android:clickable="true">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_alertdialog"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_20" />

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:drawablePadding="18dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineHeight="29dp"
            android:textColor="@color/contentTitle"
            android:textSize="18dp"
            tools:text="aldfjlasdj" />

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_28"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_28"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dimen_5"
            android:textColor="@color/contentTitle"
            android:textSize="14dp"
            tools:text="aldfjlasdj" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_s"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#747A86"
                android:textSize="16dp"
                tools:text="取消" />

            <View
                android:id="@+id/view_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line" />

            <TextView
                android:id="@+id/tvRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/mainBlue"
                android:textSize="16dp"
                tools:text="取消" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
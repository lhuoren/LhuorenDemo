<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loBackgound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dailog_color_halfbg"
    android:clickable="true">

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_alertdialog"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_20"
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddinglf"
            android:layout_marginRight="@dimen/paddinglf"
            android:layout_weight="1"
            tools:text=""
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dimen_5"
            android:lineHeight="@dimen/dimen_24"
            android:textColor="@color/contentTitle"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_s"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#747A86"
                tools:text="确定"
                android:lineHeight="26dp"
                android:textSize="15dp" />

            <View
                android:id="@+id/vDivider"
                android:layout_width="@dimen/divider_s"
                android:layout_height="match_parent"
                android:background="@color/line" />
            <TextView
                android:id="@+id/tvRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="取消"
                android:textColor="@color/primary"
                android:lineHeight="26dp"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>